@model IList<TyresStore.Repository.Models.Tyre>

<h3 style="width:90%; display:inline-block;">Tyres <span class="label label-default">@Model.Count</span></h3>
    <a><span class="glyphicon glyphicon-remove" onclick="closeTyres(this);"></span></a>
    
  
@if(Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Season</th>
                <th>Article code</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var tyre in Model)
            {
            <tr>
                <td>@tyre.Brand</td>
                <td>@tyre.Season</td>
                <td>@tyre.ArticleCode</td>
                <td>@tyre.Price</td>
                <td class="button-select">
                    <button type="button" class="btn btn-primary update-cart-button" onclick="mainModel.updateCart(@tyre.ID, '@tyre.Brand', '@tyre.ArticleCode', '@tyre.Season', @tyre.Price)">Add to cart<span class="glyphicon glyphicon-shopping-cart"></span></button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}else{
    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Season</th>
                <th>Article code</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="5">No tires for this vehicle</td>
            </tr>
            </tbody>
    </table>
            }
